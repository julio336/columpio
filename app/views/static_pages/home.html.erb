<div class="row-fluid">
	<header>
		<div class="span10 offset1"><%= link_to image_tag('logo_final.png', style: "max-width: 70%"), work_path, :remote => true, id: "main_menu" %></div>
		<nav style="display:block">
			<ul class="pointer">
				
				<li>
					<%= link_to "Comunidad", comunidad_path, :remote => true %>
				</li>
				<li>
					<%= link_to "Colectivo", colectivo_path, :remote => true %>
				</li>
				<li>
					<%= link_to "Esencia", esencia_path, :remote => true %>
				</li>
				<li>
					<%= link_to "Contacto", "#" %>
				</li>
			</ul>
		</nav>
	</header>
	<div class="row-fluid">
		<div style="margin-left:-78px">
			<div class="span9 offset3" id="content">
				<%= render 'work' %>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
$(function(){
	$('.pointer li').bind('click', function(){
		$('.pointer li > a').removeClass('active_link');
		$(this).find('a').addClass('active_link');
	});

	$('#main_menu').bind('click', function(){
		$('.pointer li > a').removeClass('active_link');
	});

});

</script>